@model Attendance.ViewModels.SignUpViewModel
@{
    ViewBag.Title = "Signup";
}

<div class="account-page">
    <div class="container">
        <h3 class="account-title">AMS SignUp</h3>
        <div class="account-box">
            <div class="account-wrapper">
                <div class="account-logo">
                    <a href="index.html"><img src="../../Content/assets/img/logo2.png" alt="Focus Technologies"></a>
                </div>
                @using (Html.BeginForm("Save", "User"))
                {
                    <div class="form-group form-focus">
                        @Html.LabelFor(m => m.Users.username, new { @class = "control-label" })
                        @Html.TextBoxFor(m=>m.Users.username, new {@class ="form-control floating"})
                        @Html.ValidationMessageFor(m => m.Users.username)
                    </div>
                    <div class="form-group form-focus">
                        @Html.LabelFor(m => m.Users.password, new { @class = "control-label" })
                        @Html.PasswordFor(m=>m.Users.password, new {@class ="form-control floating"})
                        @Html.ValidationMessageFor(m => m.Users.password)
                    </div>
                    <div class="form-group form-focus">
                        @Html.LabelFor(m => m.repassword, new { @class = "control-label" })
                        @Html.PasswordFor(m => m.repassword, new { @class = "form-control floating" })
                        @Html.ValidationMessageFor(m => m.repassword)
                    </div>
                    @Html.HiddenFor(m => m.Users.id)

                    <div class="form-group text-center">
                        <button class="btn btn-primary btn-block account-btn" type="submit">Register</button>
                    </div>
                    

                    <div class="text-center">
                        @Html.ActionLink("Already have an Account?", "Index", "Home")
                    </div>
                }
            </div>
        </div>
    </div>
</div>


